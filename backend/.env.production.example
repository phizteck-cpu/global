# Server Configuration
PORT=5000
NODE_ENV=production
API_ONLY=true

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-secure-jwt-secret-here

# Database Configuration (MySQL - Hostinger)
# Use 127.0.0.1 for local MySQL connection on Hostinger
DATABASE_URL="mysql://username:password@127.0.0.1:3306/database_name"

# Paystack Configuration (get from https://dashboard.paystack.com)
PAYSTACK_SECRET=sk_live_your_secret_key
PAYSTACK_PUBLIC=pk_live_your_public_key

# Frontend URL
FRONTEND_URL=https://valuehills.shop
