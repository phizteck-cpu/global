{
    "name": "valuehills-server",
    "version": "1.0.0",
    "description": "Backend API for Valuehills",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "node server.js",
        "postinstall": "npx prisma generate --schema=prisma/schema.prisma && npx prisma generate --schema=backend/prisma/schema.prisma",
        "start:prod": "node server.js",
        "dev": "node --watch server.js",
        "test": "cd backend && cross-env NODE_ENV=test npx prisma db push --force-reset && cross-env NODE_ENV=test jest --runInBand --forceExit",
        "seed": "node backend/prisma/seed.js",
        "init-db": "npx prisma db push --schema=backend/prisma/schema.prisma && node backend/prisma/seed.js"
    },
    "dependencies": {
        "@prisma/client": "^5.21.1",
        "@tailwindcss/vite": "^4.1.18",
        "@vitejs/plugin-react": "^5.1.4",
        "autoprefixer": "^10.4.24",
        "axios": "^1.13.3",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dotenv": "^16.4.5",
        "express": "^4.18.3",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.3.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "node-cron": "^4.2.1",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "vite": "^7.3.1"
    },
    "prisma": {
        "seed": "node prisma/seed.js"
    },
    "devDependencies": {
        "cross-env": "^10.1.0",
        "jest": "^30.2.0",
        "prisma": "^5.21.1",
        "supertest": "^7.2.2"
    }
}
